# {{ ansible_managed }}

{% set odl_cluster_list = [] %}
{% set host_ip = "" %}

{% for host in groups["neutron_server_container"]  %}
   {% if inventory_hostname|string == host|string %}
      #{% set host_ip = hostvars[host]['container_address']|string %}
      {% set host_ip = "kati" %}
   {% endif %}
   {% set ip_address =  hostvars[host]['container_address']|string %}
   {% set _ = odl_cluster_list.append('"' + "akka.tcp://opendaylight-cluster-data@" + ip_address + ":" + "2550" + '"')  %}
{% endfor %}
pame={{ host_ip }}

odl-cluster-data {
  akka {
    remote {
      artery {
        enabled = off
        canonical.hostname = "172.29.238.255"
        canonical.port = 2550
      }
      netty.tcp {
        hostname = "172.29.238.255"
        port = 2550
      }
      # when under load we might trip a false positive on the failure detector
      # transport-failure-detector {
        # heartbeat-interval = 4 s
        # acceptable-heartbeat-pause = 16s
      # }
    }

    cluster {
      # Remove ".tcp" when using artery.
      seed-nodes = [{{ odl_cluster_list | join(',') }}]
      roles = [
        "member-1"
      ]

    }

    persistence {
      # By default the snapshots/journal directories live in KARAF_HOME. You can choose to put it somewhere else by
      # modifying the following two properties. The directory location specified may be a relative or absolute path. 
      # The relative path is always relative to KARAF_HOME.

      # snapshot-store.local.dir = "target/snapshots"
      # journal.leveldb.dir = "target/journal"

      journal {
        leveldb {
          # Set native = off to use a Java-only implementation of leveldb.
          # Note that the Java-only version is not currently considered by Akka to be production quality.

          # native = off
        }
      }
    }
  }
}

